<h1>Log in</h1>

<%= form_tag '/login' do %>
  Email: <%= text_field_tag :email, nil, required: true %>
  Password: <%= password_field_tag :password, nil, required: true %>
  <%= submit_tag "Submit" %>
<% end %>
<br><br>
<p>Don't have an account? <%= link_to "Sign up by clicking here", signup_path %></p>
